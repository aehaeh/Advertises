@page
@model Advertises.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Account/_Layout.cshtml";
}
    <body dir="rtl">
        <div class="navbar navbar-expand-sm bg-dark navbar-dark ">
            <a class="navbar-brand" href="/"> خانه </a>
            <button class="navbar-toggler"type="button" data-toggle="collapse">
                <i class="navbar-toggler-icon"></i>

            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link mt" href="#">تماس با ما</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">در باره ما</a>
                       
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"></a>
                    </li>
                </ul>
            </div> 
        </div>

        <div class="jumbotron text-center">
            <h1>
                به سایت درج آگهی خوش آمدید
            </h1>
            <p>
                لطفا در قیمت گذاری انصاف را رعایت کنید
            </p>
        </div>


        <div class="container-fluid  p-3 my-3 bg-dark text-white">
            <div class="row">
                <div class="col-6 ">
                    <form method="post">







                        <div class="row w-100"></div>

                        <div class=" justify-content-center  ">




                            <div class="row"></div>
                            <div class="input-inner-container h-25">
                                <input type="text" asp-for="MyUser.UserName" placeholder="نام کاربری " />
                            </div>



                            <div class="input-inner-container h-100">
                                <input type="password" asp-for="MyUser.Password" placeholder="رمز عبور " />

                            </div>



                            <div class="input-inner-container">
                                <button class="btn btn-primary btn-lg" type="submit">
                                    ورود

                                </button>
                            </div>

                        </div>

                        <div>
                            @Model.Massege

                        </div>

                    </form>
                </div>

            </div>
        </div>
    </body>