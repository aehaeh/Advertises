@page
@model Advertises.Pages.Advertisements.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Account/_Layout.cshtml";
}

<h1>Index</h1>
<p>

    <a asp-page="addAdvertisement" class=" btn btn-success">ایجاد</a>
</p>
<body >
    <div class=" row rtl">
        @if (Model.Advrtiseslist?.Count > 0)
        {
            <table class="table rtl">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Advrtiseslist[0].SelectedImage)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Advrtiseslist[0].Title)
                        </th>
                        <th> @Html.DisplayNameFor(model => model.Advrtiseslist[0].price)</th>
                        <th> @Html.DisplayNameFor(model => model.Advrtiseslist[0].Description)</th>


                        <th>@Html.DisplayNameFor(model => model.Advrtiseslist[0].Local)</th>
                        <th>@Html.DisplayNameFor(model => model.Advrtiseslist[0].Local.City)</th>
                        <th>ویرایش</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Advrtiseslist)
                    {
                        <tr>
                            <td class="w-25">
                                
                                    <img class="w-25 " src="@item.SelectedImage" />
                                
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Local.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Local.City.Name)
                            </td>

                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                                |
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>

                    }
                </tbody>




            </table>
        }

        
    </div>

</body>

