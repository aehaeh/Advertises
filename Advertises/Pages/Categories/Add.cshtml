@page
@model Advertises.AddCategoryModel
@{
    ViewData["Title"] = "addCategory";
    Layout = "~/Pages/Account/_Layout.cshtml";
}

<h1 class=" text-center">ایجاد دسته بندی </h1>

<div class="row rtl justify-content-center">
    <div class="col-5 shadow p-3 mb-5 bg-white rounded-pill ">
        <form method="post" class=" col-md-6 m-auto justify-content-center">
            <div>
                <input type="text" asp-for="MyCategory.Title" placeholder=" نام دسته بندی جدید" class="form-control mb-1 text-left" />
                <span asp-validation-for="MyCategory.Title"></span>
            </div>


            <div>
                <button type="submit" class="btn btn-success">
                    ذخیره

                </button>

            </div>
            <div>

                <a asp-page="./Index">Back to List</a>
            </div>

        </form>
    </div>

</div>
