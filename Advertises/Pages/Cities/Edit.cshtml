@page
@model Advertises.Pages.Cities.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Account/_Layout.cshtml";
}

<h1 class="text-center">ویرایش</h1>
<div class="row rtl justify-content-center">
    <div class="col-5 shadow p-3 mb-5 bg-white rounded">
        <form method="post" class="col-md-8 m-auto justify-content-center text-center">
            <div>
                <label>عنوان</label>
                <input type="text" asp-for="MyCity.Name" placeholder=""  class="form-control"/>

            </div>
            <div>

                <input type="hidden" asp-for="MyCity.Id" />
            </div>


            <div>
                <button type="submit" class="btn btn-primary mt-2">
                    ذخیره

                </button>

            </div>
            <a asp-page="./IndexCities">Back to List</a>
        </form>
    </div>
</div>
